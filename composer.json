{
    "name": "fuelviews/laravel-robots-txt",
    "description": "Fuelviews laravel robots.txt package",
    "keywords": [
        "Fuelviews",
        "laravel",
        "laravel-robots-txt"
    ],
    "homepage": "https://github.com/fuelviews/laravel-robots-txt",
    "license": "MIT",
    "authors": [
        {
            "name": "thejmitchener",
            "email": "joshua@fuelviews.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.5",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Fuelviews\\RobotsTxt\\": "src/",
            "Fuelviews\\RobotsTxt\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fuelviews\\RobotsTxt\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-robots-txt --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fuelviews\\RobotsTxt\\RobotsTxtServiceProvider"
            ],
            "aliases": {
                "RobotsTxt": "Fuelviews\\RobotsTxt\\Facades\\RobotsTxt"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
